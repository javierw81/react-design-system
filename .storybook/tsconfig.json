{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "../",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "stories/**/*.tsx",
    "stories/**/*.ts"
  ]
}