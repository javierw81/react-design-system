{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "esModuleInterop": true,
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ]
  }